{
  "name": "munin-mail",
  "version": "1.0.0",
  "description": "AI-Native Email Client",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "react",
    "email",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "homepage": "./",
  "dependencies": {
    "@azure/msal-node": "^3.6.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "better-queue": "^3.8.12",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^17.0.1",
    "electron-is-dev": "^2.0.0",
    "imap": "^0.8.19",
    "isomorphic-fetch": "^3.0.0",
    "keytar": "^7.9.0",
    "mailparser": "^3.7.4",
    "nodemailer": "^7.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite-vec": "^0.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.munin.email",
    "productName": "Munin Email",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild"
    ]
  }
}