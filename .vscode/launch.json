    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Debug Tests: All",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "src/test_api.py",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Tests: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Tests: Single Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}::${input:testName}",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test name (e.g., TestSummarizeEndpoint::test_summarize_email_success)",
            "default": "",
            "type": "promptString"
        }
    ]
}